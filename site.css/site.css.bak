/* Will Cotton - Module 3.2 Landing Page Styles */

#container {
    margin-top: 50px;
    margin-left: 100px;
    margin-right: 100px;
    font-family: Arial, Helvetica, sans-serif;
}

/* Headings color scheme */
h1, h2, h3, h4 {
    background-color: #1F3B4D;      /* your choice */
    color: #FFFFFF;                 /* readable on dark background */
    border: 1px solid #D6A800;
    padding: 10px;
}

/* Links */
a {
    color: #1F6FB2;                 /* normal link color */
    text-decoration: none;
}

a:hover {
    color: #D6A800;                 /* hover color */
}

a:visited {
    color: #7A4FB3;                 /* visited color */
}
